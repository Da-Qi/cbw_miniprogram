}
.left-article .title{
    font-size: 14px;
    font-weight: bold;
    margin-left: 9px;
}
.cover-image {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-bottom: 5px;
}
.article-info {
    width: 46px;
    height: 21px;
    display: flex;
    justify-content: center;  /* 水平居中 */
    align-items: center;      /* 垂直居中 */
    border-style: solid;      /* 必须指定边框样式 */
    border-width: 1rpx;       /* 边框宽度 */
    border-color: green;    /* 边框颜色（红色） */
}

.article-info .desc{
    font-size: 13px;
    color: green;
}
.official-account-wrapper {
    height: 100px;
    width: 200px;
