.tabbar-position {
  position: fixed !important;
  bottom: 0;
  left: 0;
  width: 100%;
}

.wrap {
  height: 100vh;
  overflow: hidden;
}
.goods-category-class {
  background-color: #f6f6f6 !important;
  height: 100%;
}
.goods-category-class .goods-category-normal-item-container-item {
  margin-top: 20rpx;
}

.goods-category-class .goods-list-container {
    background: #f5f5f5 !important;
    margin-top: 16rpx;
  }

page {
  min-height: none;
  padding-bottom: 0;
  background: #f5f5f5 !important;
}

.article-card {
    position: relative;
    height: 80px;
    width: 90%;
    background-color: white;
    padding: 0 12px;
    margin: 4px 6px;
    display: flex;
    justify-content: space-between; /* 水平两端对齐 */
    align-items: center;        /* 垂直居中 */
}
.fixed-top-left{
  position: absolute;
  top: 0;
  left: 0.5px;
  font-size: 8px;
  width: 200rpx;   /* 宽度自定义 */
  height: 100rpx;  /* 高度自定义 */
  z-index: 999;    /* 保证浮在最上层 */
  color: #666666;
}

.left-article{
    display: flex;
    align-items: center;        /* 垂直居中 */
