/* pages/routeEditor/route-remove/index.wxss *//* 基础样式 */
.container {
    min-height: 100vh;
    background-color: #f5f5f5;
    padding-bottom: 20rpx;
  }
  
  /* 页面头部 */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 30rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .add-btn {
    display: flex;
    align-items: center;
    background-color: #07c160;
    color: #fff;
    padding: 15rpx 30rpx;
    margin-right: 30rpx;
    border-radius: 60rpx;
    font-size: 28rpx;
    line-height: 1;
  }
  
  .icon-add {
    margin-right: 10rpx;
    font-size: 32rpx;
  }
  
  /* 路线列表 */
  .route-list {
    padding: 20rpx;
  }
  
  .route-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  }
  
  .route-info {
    flex: 1;
  }
  
  .route-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 10rpx;
  }
  
  .route-desc {
    font-size: 26rpx;
    color: #666;
    display: block;
    margin-bottom: 20rpx;
    line-height: 1.4;
    max-width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .route-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 15rpx;
  }
  
  .meta-item {
    font-size: 24rpx;
    color: #999;
    background-color: #f5f5f5;
    padding: 5rpx 15rpx;
    border-radius: 40rpx;
  }
  
  .status-true {
    color: #07c160;
    background-color: #f0fff4;
    border: 1rpx solid #b7eb8f;
  }
  
  .status-false {
    color: #faad14;
    background-color: #fffbe6;
    border: 1rpx solid #ffe58f;
  }
  
  .route-actions {
    display: flex;
    gap: 15rpx;
    margin-left: 20rpx;
  }
  
  .action-btn {
    padding: 10rpx 20rpx;
    font-size: 26rpx;
    border-radius: 8rpx;
    line-height: 1;
  }
  
  .edit-btn {
    background-color: #e6f7ff;
    color: #1890ff;
  }
  
  .delete-btn {
    background-color: #fff2f0;
    color: #f5222d;
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    background-color: #fff;
    border-radius: 16rpx;
  }
  
  .empty-img {
    width: 200rpx;
    margin-bottom: 30rpx;
  }
  
  .empty-text {
    font-size: 28rpx;
    color: #999;
    text-align: center;
    max-width: 500rpx;
    line-height: 1.5;
  }
  
  /* 弹窗样式 */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }
  
  .modal-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1001;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
  }
  
  .modal-content {
    width: 100%;
    max-width: 600rpx;
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .modal-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
  }
  
  .modal-close {
    font-size: 40rpx;
    color: #999;
    background: none;
    padding: 0;
    line-height: 1;
  }
  
  .modal-body {
    padding: 30rpx;
  }
  
  .form-group {
    margin-bottom: 30rpx;
  }
  
  .form-row {
    display: flex;
    gap: 20rpx;
  }
  
  .half {
    flex: 1;
  }
  
  .form-label {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .form-input, .form-textarea {
    width: 100%;
    padding: 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    font-size: 28rpx;
    box-sizing: border-box;
  }
  
  .form-textarea {
    min-height: 150rpx;
    resize: vertical;
  }
  
  .radio-group {
    display: flex;
    gap: 30rpx;
    padding: 10rpx 0;
  }
  
  .radio-item {
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #333;
  }
  
  .radio-item radio {
    margin-right: 10rpx;
    transform: scale(0.8);
  }
  
  .modal-footer {
    display: flex;
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #eee;
  }
  
  .modal-btn {
    flex: 1;
    padding: 20rpx 0;
    margin: 0 10rpx;
    font-size: 28rpx;
    border-radius: 8rpx;
  }
  
  .cancel-btn {
    background-color: #f5f5f5;
    color: #333;
  }
  
  .confirm-btn {
    background-color: #07c160;
    color: #fff;
  }
  
  /* 确认删除弹窗 */
  .confirm-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    max-width: 500rpx;
    background-color: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
    z-index: 1001;
  }
  
  .confirm-title {
    display: block;
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .confirm-content {
    display: block;
    font-size: 28rpx;
    color: #666;
    text-align: center;
    margin-bottom: 30rpx;
    line-height: 1.5;
  }
  
  .confirm-buttons {
    display: flex;
    gap: 20rpx;
  }
  
  .confirm-btn {
    flex: 1;
    padding: 20rpx 0;
    font-size: 28rpx;
    border-radius: 8rpx;
  }
  
  .confirm-btn.cancel {
    background-color: #f5f5f5;
    color: #333;
  }
  
  .confirm-btn.delete {
    background-color: #f5222d;
    color: #fff;
  }
  